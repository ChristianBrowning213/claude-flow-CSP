# Research Server Configuration
# Copy this file to .env and fill in your values

# ============== REQUIRED ==============

# OpenAI API Key (for embeddings and optional code summaries)
OPENAI_API_KEY=sk-your-openai-api-key

# Supabase Configuration (for code storage and retrieval)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# ============== OPTIONAL ==============

# Server Configuration
TRANSPORT=stdio
HOST=127.0.0.1
PORT=8052

# OpenAI Model Configuration
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_SUMMARY_MODEL=gpt-4.1-nano

# Code Summary Configuration
# Set to "true" to generate AI summaries for code blocks
GENERATE_CODE_SUMMARY=true

# Knowledge Graph Configuration
# Set to "true" to enable Neo4j knowledge graph features
USE_KNOWLEDGE_GRAPH=true

# Neo4j Configuration (required only if USE_KNOWLEDGE_GRAPH=true)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password
